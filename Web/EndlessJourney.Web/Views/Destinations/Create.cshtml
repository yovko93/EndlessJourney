@model EndlessJourney.Web.ViewModels.Destinations.CreateDestinationInputModel
@{ this.ViewData["Title"] = "Add new destination";
    var cities = this.Model.Cities.Select(x => new SelectListItem(x.Value, x.Key));
}

@if (this.TempData.ContainsKey("Message"))
{
    <div class="alert alert-danger">@this.TempData["Message"]</div>
}

<form method="post" class="col-md-6 offset-md-3">
    <h2>@this.ViewData["Title"]</h2>
    <hr />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartPointId"></label>
        <select asp-for="StartPointId" class="form-control" asp-items="cities"></select>
        <span asp-validation-for="StartPointId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndPointId"></label>
        <select asp-for="EndPointId" class="form-control" asp-items="cities"></select>
        <span asp-validation-for="EndPointId" class="text-danger"></span>
    </div>
    <hr />
    <input type="submit" class="btn btn-primary" />
</form>