@model EndlessJourney.Web.ViewModels.Destinations.DestinationsListViewModel
@using static EndlessJourney.Common.GlobalConstants.RolesNamesConstants
@{
    this.ViewData["Title"] = "All Destinations";
}

@if (this.TempData.ContainsKey("Message"))
{
    <div class="alert alert-success">@this.TempData["Message"]</div>
}

<h2>@this.ViewData["Title"] - @Model.Destinations.Count()</h2>
<hr />
@if (this.User.IsInRole(AdministratorRoleName))
{
    <div>
        <ul style="list-style:none">
            <li class="nav-item">
                <a class="float-md-none alert btn btn-outline-secondary" asp-area="" asp-controller="Destinations" asp-action="Create">Create Destination</a>
            </li>
        </ul>
    </div>
}
<div class="row row-cols-1 row-cols-md-2 g-4">
    @foreach (var destination in this.Model.Destinations)
    {
        <div class="col">
            <div class="card">
                <img src=@destination.EndPointImageUrl class="card-img-top" height="400" alt=@destination.Name>
                <div class="card-body">
                    <h5 class="card-title">@destination.StartPointName to @destination.EndPointName</h5>
                    <p class="card-text">@destination.Description</p>
                </div>
            </div>
        </div>
    }
</div>
