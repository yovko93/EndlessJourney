@model EndlessJourney.Web.ViewModels.Bookings.BookingInputModel
@{
    ViewData["Title"] = "Book a trip";
}

@if (this.TempData.ContainsKey("Message"))
{
    <div class="alert alert-success">@this.TempData["Message"]</div>
}

<h1>@ViewData["Title"]</h1>
<hr />

<div>
    <div class="text-center">
        <h3 class="font-weight-light" style="margin-top:5%">Accommodation.</h3>
        <p style="margin:30px; margin-left:20%; margin-right:20%">
            Please select the number of guests per stateroom. Please note, the maximum occupancy of our staterooms and suites is four guests and staterooms for 3-4 people are limited due to overall ship capacity.
        </p>
    </div>
    <form method="post" id="bookForm" class="col-md-6 offset-md-3" style="margin-top:5%">
        <div class="form-group">
            <label asp-for="Adult"></label>
            <input onchange="TotalSum()" asp-for="Adult" class="form-control" id="adult" />
            <span asp-validation-for="Adult" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Children"></label>
            <input asp-for="Children" class="form-control" id="children" />
            <span asp-validation-for="Children" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Infant"></label>
            <input asp-for="Infant" class="form-control" id="infant" />
            <span asp-validation-for="Infant" class="text-danger"></span>
        </div>
        <input id="tripId" type="hidden" asp-for="TripId" />
        <hr />
        <div>
            Total cost: $<span class="totalSum"></span>
        </div>
    </form>
    <div class="col-md-6 offset-md-3">
        <button type="submit" class="btn btn-success" style="margin-top:3%" data-toggle="modal" data-target="#bookModal">Book now</button>
    </div>
</div>

<!-- Book Modal -->
<div class="modal" id="bookModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm book</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>
                    Do you want to book this trip for $<span class="totalSum"></span>?
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="bookForm.submit()">Confirm</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        function TotalSum() {
            let xhr = new XMLHttpRequest();
            var tripId = document.getElementById("tripId").value;

            xhr.onreadystatechange = function () {
                if (this.readyState == 4 && this.status == 200) {
                    var adultsCount = document.getElementById("adult").value;
                    var sum = Number(this.responseText) * adultsCount;

                    document.getElementsByClassName("totalSum")[0].innerHTML = sum;
                    document.getElementsByClassName("totalSum")[1].innerHTML = sum;
                }
            }
            xhr.open("GET", "/Bookings/TotalSum/" + tripId);
            xhr.send();
        }
    </script>
}